<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="添加账户" android:gravity="center" android:textSize="40dp"/>

    <!-- 账户名称-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户名称:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:hint="输入账户名称" android:layout_weight="1"/>
    </LinearLayout>

    <!-- 账户图标-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户图标:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:hint="输入账户图标" android:layout_weight="1"/>
    </LinearLayout>

    <!-- 总额-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户总额:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:hint="输入账户总额" android:layout_weight="1"/>
    </LinearLayout>

    <!-- -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户创建时间:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:hint="输入账户创建时间" android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>