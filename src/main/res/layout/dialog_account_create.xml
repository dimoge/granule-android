<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="添加账户" android:gravity="center" android:textSize="40dp"/>

    <!-- 账户名称-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户名称:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:id="@+id/account_name_edtTxt" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="账户名称随你写" android:layout_weight="1"/>
    </LinearLayout>

    <!-- 账户图标-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户图标:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <RadioGroup android:id="@+id/account_icon_rdoGroup" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
            <RadioButton android:id="@+id/account_cash" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_launcher"/>
            <RadioButton android:id="@+id/account_incash" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_launcher"/>
        </RadioGroup>
    </LinearLayout>

    <!-- 总额-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户总额:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:id="@+id/account_total_edtTxt" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="输入账户总额" android:layout_weight="1" android:inputType="number"/>
    </LinearLayout>

    <!-- 创建时间默认, 所以不用设置了, 就是当前时间好了, 隐藏起来-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:visibility="gone">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账户创建时间:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:layout_width="match_parent" android:layout_height="match_parent" android:hint="输入账户创建时间" android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:orientation="horizontal">
        <Button android:id="@+id/account_create_no_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="取消"/>
        <Button android:id="@+id/account_create_yes_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="确认"/>
    </LinearLayout>

</LinearLayout>