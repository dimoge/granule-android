<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
        >
    <LinearLayout android:layout_width="match_parent" android:layout_height="40dp" android:orientation="horizontal">
        <ImageButton android:id="@+id/check_create_imgBtn" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@mipmap/check_create_bg" android:layout_weight="1"/>
        <ImageButton android:id="@+id/check_del_imgBtn" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@mipmap/check_del_bg" android:layout_weight="1"/>
        <ImageButton android:id="@+id/check_update_imgBtn" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@mipmap/check_update_bg" android:layout_weight="1"/>
    </LinearLayout>
    <ListView android:id="@+id/check_lv" android:layout_width="match_parent" android:layout_height="match_parent">

    </ListView>

</LinearLayout>