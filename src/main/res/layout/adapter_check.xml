<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:id="@+id/check_item_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <!-- 左侧图标-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="4">
            <ImageView android:id="@+id/check_item_img"
                       android:layout_width="match_parent" android:layout_height="match_parent"
                       android:layout_weight="4" android:background="@mipmap/check_item_head"/>
        </LinearLayout>
        <!-- 右侧标题和日期-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="1">
            <!-- 标题-->
            <TextView android:id="@+id/check_item_title_tv"
                      android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_weight="1"
                    />
            <!-- 金额-->
            <TextView android:id="@+id/check_item_amount_tv"
                      android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_weight="1"
                    />
            <!-- 备注-->
            <TextView android:id="@+id/check_item_remark_tv"
                      android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <!-- 日期-->
            <TextView android:id="@+id/check_item_date_tv"
                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>