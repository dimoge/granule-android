<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/account_bg">
    <!-- 头部部分-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageButton android:layout_width="match_parent" android:layout_height="match_parent" android:background="@mipmap/account_left" android:layout_weight="3"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="2015年8月" android:gravity="center" android:layout_weight="1"/>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="总收入:8000" android:gravity="center" android:layout_weight="1"/>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="总支出:2615" android:gravity="center" android:layout_weight="1"/>
        </LinearLayout>
        <ImageButton android:id="@+id/account_update_imgBtn" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@mipmap/account_right" android:layout_weight="3"/>
    </LinearLayout>
    <!-- 账户列表-->
    <ListView android:id="@+id/account_lv" android:layout_width="match_parent" android:layout_height="fill_parent"></ListView>



</LinearLayout>