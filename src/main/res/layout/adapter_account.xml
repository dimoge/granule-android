<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:id="@+id/account_item_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <!-- 账户图标-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3">
            <ImageView android:id="@+id/account_icon_img" android:layout_width="match_parent" android:layout_height="match_parent" />
        </LinearLayout>
        <!--中部显示文字信息-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:layout_weight="1.5">
            <TextView android:id="@+id/account_name_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#FFFF"/>
            <TextView android:id="@+id/account_total_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="#FFFF"/>
        </LinearLayout>
        <!-- 编辑按钮-->
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="3">
            <ImageButton android:id="@+id/account_update_imgBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@mipmap/account_update"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>