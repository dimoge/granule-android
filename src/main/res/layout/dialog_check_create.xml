<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="添加账单详情" android:gravity="center" android:textSize="40dp"/>

    <!-- 账单名称-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账单名称:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:id="@+id/check_title_edtTxt" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="账单名称" android:layout_weight="1"/>
    </LinearLayout>

    <!-- 账单备注-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账单备注:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:id="@+id/check_remark_edtTxt" android:layout_width="match_parent" android:layout_height="match_parent" android:hint="此刻的想法..." android:layout_weight="1"/>
    </LinearLayout>

    <!-- 收入还是支出-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="账单类型:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <RadioGroup android:id="@+id/account_icon_rdoGroup" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:orientation="horizontal">
            <RadioButton android:id="@+id/check_out_radioBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="支出"/>
            <RadioButton android:id="@+id/check_in_radioBtn" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="收入"/>
        </RadioGroup>
    </LinearLayout>

    <!-- 金额-->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="金额:" android:layout_weight="3" android:gravity="right|center_vertical"/>
        <EditText android:id="@+id/check_amount_edtTxt" android:layout_width="match_parent" android:layout_height="match_parent" android:inputType="number" android:layout_weight="1"/>
    </LinearLayout>



</LinearLayout>